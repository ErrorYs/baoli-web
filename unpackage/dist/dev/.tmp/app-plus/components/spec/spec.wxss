
.goods-specs,.goods-number{
	padding: 26rpx;
	border-top: 1px solid #f3f3f3;
}
.goods-specs:first-child{
	border: none;
}
.pop-m-title{
	margin-right: 10rpx;
	color: #666;
}
.pop-m-item{
	display: inline-block;
	float: left;
	padding: 6rpx 16rpx;
	background-color: #fff;
	color: #333;
	margin-right: 16rpx;
	margin-bottom: 10rpx;
}
.pop-m-bd{
	overflow: hidden;
	margin-top: 10rpx;
}
.selected{
	border: 2rpx solid #333;
	background-color: #333;
	color: #fff;
}
.not-selected{
	border: 2rpx solid #ccc;
}
.none{
	border: 2rpx dashed #ccc;
	color: #888;
}

