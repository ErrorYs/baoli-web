
.coupon {
	padding: 0 26rpx;
	background-color: #f8f8f8;
}
.coupon-item {
	padding: 20rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
}
.coupon-i-l {
	width: 400rpx;
	display: inline-block;
}
.coupon-i-l-t {
	font-size: 32rpx;
	position: relative;
	margin-bottom: 10rpx;
}
.coupon-i-l-t .icon {
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.coupon-i-l-t text {
	margin-left: 60rpx;
}
.coupon-i-l-b {
	font-size: 24rpx;
	color: #999;
}
.coupon-i-r {
	width: 258rpx;
