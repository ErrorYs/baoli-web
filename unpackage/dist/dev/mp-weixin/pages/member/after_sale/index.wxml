="{{[['input',[['__set_model',['','reason','$event',[]]]]]]}}" value="{{reason}}" bindinput="__e"></textarea></view></view></view><view class="button-bottom"><button class="btn btn-b btn-square" formType="submit" disabled="{{submitStatus}}" loading="{{submitStatus}}">提交</button></view></form></view>